<h1>Song Form</h1>

<%= form_tag('/songs') do %>
  <%= label_tag 'song[name]' %>
  <%= text_field_tag 'song[name]' %>

  <%= label_tag 'song[artist_id]' %>
  <%= form_number_field 'song[artist_id]' %>

  <%= label_tag 'song[genre_id]' %>
  <%= form_number_field 'song[genre_id]' %>

  <%= submit_tag "Create Song" %>
<% end %>
